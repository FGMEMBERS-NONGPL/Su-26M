 <!-- include animations for the engine gills-->
 <!--<animation include="Aircraft/Su-26M/Models/engine-gills.xml"/>-->
 
 <!-- LOD for the model as a whole -->

 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>10000</max-m>
 </animation>
 
 <!-- Cockpit LODing -->

 <animation>
  <name>InteriorGroup</name>
  <object-name>Cockpit</object-name>
  <object-name>Seat</object-name>
  <object-name>Head</object-name>
  <object-name>PilotBody</object-name>
  <object-name>LeftArm</object-name>
  <object-name>RightArm</object-name>
  <object-name>CanopyLatch</object-name>
  <object-name>Stick</object-name>
  <object-name>Throttle</object-name>
 </animation>

 <animation>
  <type>range</type>
  <object-name>InteriorGroup</object-name>
  <min-m>0</min-m>
  <max-m>300</max-m>
 </animation>

 <!-- remove objects that are not needed in virtual cockpit view -->
 
 <animation>
   <name>notFromCockpit</name>
     <object-name>TailWheelFork</object-name>
     <object-name>TailWheelTire</object-name>
     <object-name>TailWheelRim</object-name>
     <object-name>Spinner</object-name>
     <object-name>CanopyFrame</object-name>
     <object-name>Canopy</object-name>
     <object-name>Windscreen</object-name>
 </animation> 

 <animation>
  <type>select</type>
  <object-name>InteriorGroup</object-name>  
  <object-name>notFromCockpit</object-name>
  <condition>
    <not>
     <property>/sim/current-view/internal</property>
    </not>
  </condition>
 </animation>

 <animation>
  <type>noshadow</type>
  <object-name>Canopy</object-name>
  <object-name>Windscreen</object-name>
 </animation>

      
 <!-- Propeller + engine ************************-->
 
 
 <animation>
  <type>select</type>
  <object-name>Propeller</object-name>
  <condition>
   <less-than>
    <property>engines/engine[0]/rpm</property>
    <value>800</value>
   </less-than>
  </condition>
 </animation>

 <animation>
  <type>spin</type>
  <object-name>Propeller</object-name>
  <property>engines/engine[0]/rpm</property>
  <factor>-1</factor>
  <center>
   <x-m>-1.77</x-m>
   <y-m>0</y-m>
   <z-m>-0.12</z-m>
  </center>
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 
  <animation>
  <type>select</type>
  <object-name>PropellerDisk</object-name>
  <condition>
   <greater-than>
    <property>engines/engine[0]/rpm</property>
    <value>800</value>
   </greater-than>
  </condition>
 </animation>
 
 <animation>
  <type>noshadow</type>
  <object-name>PropellerDisk</object-name>
 </animation> 

 <animation>
  <type>spin</type>
  <object-name>PropellerDisk</object-name>
  <property>engines/engine[0]/rpm</property>
  <factor>-0.05</factor>
  <center>
   <x-m>-1.77</x-m>
   <y-m>0</y-m>
   <z-m>-0.12</z-m>
  </center>
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>
 
  


