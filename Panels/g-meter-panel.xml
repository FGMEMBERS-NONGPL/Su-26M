<PropertyList>

 <name>Su-26 main panel</name>
 <background>Aircraft/Su-26M/Panels/transparent-bg.rgb</background>
 <w>1024</w>
 <h>768</h>
 
<instruments>
  
 <instrument> <!--include="Instruments/mainActions.xml"-->

  <name>controls</name>
   <x>512</x>
   <y>384</y>   
   <w-base>1024</w-base>
   <h-base>768</h-base>

 <actions>

  <action>                             
   <desc>reset 1</desc>
   <button>0</button>               
   <x>-100</x>                        
   <y>-140</y>
   <w>64</w>                        
   <h>64</h>
   <binding>
    <command>property-assign</command>
    <property>/fdm/jsbsim/accelerations/pilot-gmax[0]</property>		     
    <value>-1.0</value>
   </binding>	
   <binding>
    <command>property-assign</command>
    <property>/fdm/jsbsim/accelerations/pilot-gmin[0]</property>		     
    <value>-1.0</value>
   </binding>	
  </action>
  
  <action>                             
   <desc>reset 2</desc>
   <button>0</button>               
   <x>40</x>                        
   <y>120</y>
   <w>64</w>                        
   <h>64</h>
   <binding>
    <command>property-assign</command>
    <property>/fdm/jsbsim/accelerations/pilot-gmax[1]</property>		     
    <value>-1.0</value>
   </binding>	
   <binding>
    <command>property-assign</command>
    <property>/fdm/jsbsim/accelerations/pilot-gmin[1]</property>		     
    <value>-1.0</value>
   </binding>	
  </action>
   
 </actions>
 
 </instrument>
 
 </instruments> 
   
</PropertyList>
